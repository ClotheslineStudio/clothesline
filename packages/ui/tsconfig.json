{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    // Keep sources under src/
    "rootDir": "./src",

    // SvelteKit / modern bundler setup
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true, // ðŸ‘ˆ required for Svelte + TS

    // Svelte awareness
    "types": ["svelte"],

    // DX / safety
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}




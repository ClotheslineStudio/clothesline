{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    // IMPORTANT: remove these
    // "verbatimModuleSyntax": true,
    // "allowImportingTsExtensions": true,

    // Path aliases should map to built output,
    // not raw source for consumer apps
    "baseUrl": ".",
    "paths": {
      "@clothesline/tokens": ["packages/tokens/dist/index.d.ts"],
      "@clothesline/themes": ["packages/themes/dist/index.d.ts"],
      "@clothesline/ui": ["packages/ui/dist/index.d.ts"]
    }
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}

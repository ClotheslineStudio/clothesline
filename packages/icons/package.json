{
  "name": "@clothesline/icons",
  "version": "0.0.1",
  "type": "module",

  "files": ["dist"],

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components/*": "./dist/components/*"
  },

  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "build": "pnpm clean && node ./src/scripts/build-icons.mjs && pnpm copy && pnpm build:types",
    "copy": "node -e \"require('fs').cpSync('src/components', 'dist/components', { recursive: true })\"",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist"
  },

  "devDependencies": {
    "svelte": "^5.45.2",
    "typescript": "^5.6.0",
    "fast-glob": "^3.3.3",
    "svgo": "^3.3.2",
    "@types/node": "^24.10.1"
  }
}


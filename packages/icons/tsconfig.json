{
  "extends": "../../tsconfig.json",

  "include": ["src/**/*"],

  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",

    "moduleResolution": "bundler",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,

    "isolatedModules": true,

    "types": ["svelte"]
  }
}

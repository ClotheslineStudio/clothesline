{
  "name": "@clothesline/themes",
  "version": "0.0.1",
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./setTheme": "./src/index.ts",
    "./dist/clothesline-light.css": "./dist/clothesline-light.css",
    "./dist/clothesline-dark.css": "./dist/clothesline-dark.css",
    "./dist/solarflare-light.css": "./dist/solarflare-light.css",
    "./dist/solarflare-dark.css": "./dist/solarflare-dark.css",
    "./dist/bigsky-light.css": "./dist/bigsky-light.css",
    "./dist/bigsky-dark.css": "./dist/bigsky-dark.css",
    "./dist/evergreen-light.css": "./dist/evergreen-light.css",
    "./dist/evergreen-dark.css": "./dist/evergreen-dark.css",
    "./dist/milkyway-light.css": "./dist/milkyway-light.css",
    "./dist/milkyway-dark.css": "./dist/milkyway-dark.css",
    "./dist/neondusk-light.css": "./dist/neondusk-light.css",
    "./dist/neondusk-dark.css": "./dist/neondusk-dark.css",
    "./dist/oceandepths-light.css": "./dist/oceandepths-light.css",
    "./dist/oceandepths-dark.css": "./dist/oceandepths-dark.css",
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist",
    "src",
    "configs"
  ],
  "scripts": {
  "build": "tsx src/build.ts",
  "build:watch": "chokidar \"src/**/*.{ts,json}\" \"configs/**/*.{ts,json}\" -c \"pnpm build\"",
  "build:formats": "tsx src/build-formats.ts",
  "build:figma": "tsx src/build-figma-tokens.ts",
  "build:figma:merged": "tsx src/build-figma-merged.ts",
  "build:figma:single": "tsx src/build-figma-single.ts",
  "build:all": "pnpm run build && pnpm run build:formats"
},

  "devDependencies": {
    "@clothesline/tokens": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "fs-extra": "^11.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  }
}
